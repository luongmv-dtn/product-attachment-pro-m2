<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceBlock name="product_tabs">
            <block class="LuongMv\FileUploader\Block\Adminhtml\Product\Edit\Tab" name="product.fileuploader">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">XYZ</argument>
                    <argument name="url" xsi:type="url" path="fileuploader/product_reviews/grid">
                        <param name="_current">1</param>
                    </argument>
                    <argument name="class" xsi:type="string">ajax</argument>
                    <argument name="group_code" xsi:type="string">advanced</argument>
                </arguments>
            </block>
            <action method="addTab">
                <argument name="name" xsi:type="string">product-fileuploader</argument>
                <argument name="block" xsi:type="string">product.fileuploader</argument>
            </action>
        </referenceBlock>
    </body>
</page>
